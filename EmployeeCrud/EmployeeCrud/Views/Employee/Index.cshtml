@model List<EmployeeCrud.Models.Employee>
@{
    ViewData["Title"] = "All Employees";
}
<h1>Employee List</h1>
<table class="table">
    <thead>
        <tr class="container text-center">
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Department</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr class="container text-center">
                <th scope="row">@employee.Id</th>
                <td>@employee.Name</td>
                <td>@employee.Department</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a asp-action="Details" asp-route-id="@employee.Id" type="button" class="btn btn-outline-primary">View</a>
                        <a asp-action="Edit" asp-route-id="@employee.Id" type="button" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@employee.Id" type="button" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>